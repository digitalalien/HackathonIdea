{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (server.js)",
      "program": "${workspaceFolder}/server.js",
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "env": {
        "PORT": "3001"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Serve with http-server",
      "program": "${workspaceFolder}/node_modules/http-server/bin/http-server",
      "args": [
        ".",
        "-p",
        "8080",
        "-c-1"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Full Stack: Debug Backend & Serve Frontend",
      "configurations": [
        "Debug Backend (server.js)",
        "Serve with http-server"
      ]
    }
  ]
}